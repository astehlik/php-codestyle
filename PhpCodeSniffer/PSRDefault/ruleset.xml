<?xml version="1.0"?>
<ruleset name="PSRDefault">
    <description>Includes all PSR coding standard and some additional checks.</description>

    <rule ref="PSR1" />
    <rule ref="PSR2" />
    <rule ref="Squiz.Strings.DoubleQuoteUsage" />
    <rule ref="Squiz.Commenting.InlineComment">
        <exclude name="Squiz.Commenting.InlineComment.Empty" />
        <exclude name="Squiz.Commenting.InlineComment.DocBlock" />
        <exclude name="Squiz.Commenting.InlineComment.InvalidEndChar" />
    </rule>

    <rule ref="Squiz.Strings.ConcatenationSpacing">
        <properties>
            <property name="ignoreNewlines" value="true" />
            <property name="spacing" value="1" />
        </properties>
    </rule>
    <rule ref="Squiz.Functions.MultiLineFunctionDeclaration">
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.FirstParamSpacing" />
    </rule>

    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>
    <!-- We use a custom sniff here because we want to use the firstVarException property. -->
    <!-- See: https://github.com/squizlabs/PHP_CodeSniffer/pull/972 -->
    <rule ref="SWebhosting.WhiteSpace.MemberVarSpacing">
        <properties>
            <property name="firstMemberSpacing" value="0" />
        </properties>
    </rule>
    <rule ref="Squiz.WhiteSpace.FunctionOpeningBraceSpace" />
    <rule ref="SWebhosting.WhiteSpace.FunctionClosingBraceSpace" />

    <rule ref="Squiz.Arrays.ArrayDeclaration">
        <exclude name="Squiz.Arrays.ArrayDeclaration.ValueNotAligned" />
        <exclude name="Squiz.Arrays.ArrayDeclaration.KeyNotAligned" />
        <exclude name="Squiz.Arrays.ArrayDeclaration.DoubleArrowNotAligned" />
        <exclude name="Squiz.Arrays.ArrayDeclaration.CloseBraceNotAligned" />
    </rule>
    <rule ref="Squiz.Arrays.ArrayBracketSpacing" />
    <rule ref="Generic.Arrays.DisallowLongArraySyntax" />
    <rule ref="Squiz.NamingConventions.ValidVariableName"/>
</ruleset>
