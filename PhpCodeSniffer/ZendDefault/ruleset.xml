<?xml version="1.0"?>
<ruleset name="ZendDefault">

    <description>Includes all Zend coding standards and some additional checks.</description>

    <rule ref="PSR2">
        <exclude name="PSR1.Classes.ClassDeclaration"/>
        <exclude name="Squiz.Classes.ValidClassName"/>
        <exclude name="PSR2.Namespaces.NamespaceDeclaration"/>
        <exclude name="PSR2.Classes.ClassDeclaration.ExtendsLine"/>
        <exclude name="PSR2.Classes.ClassDeclaration.ImplementsLine"/>
        <exclude name="PSR2.Classes.ClassDeclaration.SpaceBeforeName"/>
        <exclude name="PSR2.Classes.ClassDeclaration.InterfaceWrongIndent"/>

        <exclude name="PSR2.Classes.PropertyDeclaration.Underscore"/>
        <exclude name="PSR2.Methods.MethodDeclaration.Underscore"/>

        <exclude name="PSR2.ControlStructures.ControlStructureSpacing.SpacingAfterOpenBrace"/>
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration"/>
        <exclude name="PSR2.Methods.FunctionCallSignature"/>
        <exclude name="Squiz.ControlStructures.ControlSignature"/>

        <exclude name="Generic.ControlStructures.InlineControlStructure"/>
        <exclude name="Squiz.ControlStructures.ForEachLoopDeclaration"/>
        <exclude name="Squiz.ControlStructures.ForLoopDeclaration"/>
    </rule>

    <rule ref="Zend">
        <exclude name="Generic.Files.LineLength"/>
        <exclude name="Generic.Functions.OpeningFunctionBraceBsdAllman"/>
    </rule>

    <rule ref="PEAR.Functions.FunctionDeclaration"/>
    <rule ref="Squiz.WhiteSpace.FunctionOpeningBraceSpace"/>
    <rule ref="SWebhosting.WhiteSpace.FunctionClosingBraceSpace"/>

    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="exact" value="true"/>
        </properties>
    </rule>

</ruleset>
